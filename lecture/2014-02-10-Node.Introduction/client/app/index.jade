doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Foundation 5
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Foundation 5 Template
    .row
      .small-2.columns
        button#one One
      .small-10.columns
        #one-response
    .row
      .small-2.columns
        button#two Two
      .small-10.columns
        #two-response
    .row
      .small-3.columns
        input#inputone(type='text')
      .small-3.columns
        input#inputtwo(type='text')
      .small-3.columns
        button#add Add
      .small-3.columns
        #sum
    .row
      .small-6.columns
        input#name(type='text', value='Name')
      .small-6.columns
        input#age(type='text', value='Age')
    .row
      .small-6.columns
        button#candrink Can Drink?
      .small-6.columns
        #result Can they drink?
    .row
      .small-12.columns
        input#numbers(type='text', value='Enter some numbers')
    .row
      .small-6.columns
        button#product-button Product
      .small-6.columns
        #product-response
    .row
      .small-9.columns
        input#names(type='text', value='Enter some names')
      .small-3.columns

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/main.js')

