doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title My Favorite Songs
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 My Favorite Songs
        h5 Hey visitor. Add your favorite songs to the list. See what everyone else likes.
    .row
      .row
        .small-2.columns
          form#song-form
            fieldset
              legend Add a Song
              .row
                .small-12.columns
                  label Title
                    input(type='text', name='name', autofocus=true)
              .row
                .small-12.columns
                  label Artist
                    input(type='text', name='artist')
              .row
                .small-12.columns
                  button.expand.radius.tiny#add-song Add Song
          form#search-form
            fieldset
              legend Filter List
              .row
                .small-12.columns.hide#search-fields
                  label by Artist
                    input(type='text', name='search')
              .row
                .small-12.columns
                  button.expand.radius.tiny.hide#search-song Do It
          form.hide#edit-form
            fieldset
              legend Edit a Song's Info
              .row
                .small-12.columns
                  label Name
                    input(type='text', name='name', autofocus=true)
              .row
                .small-12.columns
                  label Artist
                    input(type='text', name='artist')
              .row
                .small-12.columns
                  button.expand.radius.tiny#cancel-edits Cancel
                  button.expand.radius.tiny#submit-edits Submit Edits
          form.hide#delete-form
            fieldset
              legend Delete a Song
              .row
                .small-12.columns
                  textarea#delete-message Are you sure you want to delete this song from this totally awesome database? It will be lost forever...
                  button.expand.radius.tiny#cancel-delete Nevermind
                  button.expand.radius.tiny#submit-delete Really Delete
        .small-10.columns
          table#song-table
            thead
              th Title
              th Artist
              th
            tbody

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/main.js')

