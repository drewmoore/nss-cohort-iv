doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/flags.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1=title
        h5 Test your geography skills. Match the countries and their flags.
    .row#gameboard
      .small-2.columns#hourglass-column
        #sand.timepiece
        #hourglass.timepiece
      .small-3.columns#gameboard-names
        each c in countries
          .gameboard-square.name-square
            p.name= c.country
      .small-2.columns#gameboard-flags
        each f in flags
          .gameboard-square.flag-square
            p.flag(class='flag-' + f.flag)
      .small-2.columns#winning-flags
      .small-3.columns#winning-names


    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

